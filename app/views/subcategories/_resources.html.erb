<div class="well clearfix">
  <% @resources.each do |resource| %>

      <%= link_to(resource_path(resource)) do %>

          <div class="col-sm-3 col-lg-3 col-md-3">
            <div class="thumbnail list-resource">
              <div class="img-wrapper">
                <% if resource.image? %>
                    <%= image_tag(resource.image_url, :class => "img-thumbnail") %>
                <% else %>
                    <%= image_tag('CS.gif', :class => "img-thumbnail") %>
                <% end %>
              </div>
              <div class="caption">
                <h4 class="pull-right">$24.99</h4>
                <h4><a href="#"><%= resource.title %></a>
                </h4>

                <p>See more snippets like this online store item at
                  <a target="_blank" href="http://www.bootsnipp.com">Bootsnipp - http://bootsnipp.com</a>.</p>
              </div>
              <div class="ratings">
                <p class="pull-right">15 reviews</p>

                <p>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                </p>
              </div>
            </div>
          </div>


      <% end %>

  <% end %>

</div>