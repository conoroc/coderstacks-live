<h4>Reviews</h4>
<%= render :partial => @resource.reviews %>
<%= form_for([@resource, @resource.reviews.build]) do |f| %>
    <div>
      <%= f.label 'Review This Resource' %>
      <%= f.text_area :content, :cols => 20, :rows => 2, :id => 'comment-txt' %>
      <%= f.select :score, options_for_select(1..10) %>
    </div>
    <p><%= f.submit "Add Review", class: 'tiny button success' %></p>
<% end %>